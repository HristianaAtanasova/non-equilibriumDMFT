\begin_inset Formula 
\[
\mathrm{H_{fBath}=\sum_{k,\sigma}\varepsilon_{k}f_{k,\sigma}^{\dagger}f_{k,\sigma}}
\]

\end_inset

and 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathrm{H_{fmix}=\sum_{k,\sigma}(V_{k}f_{k,\sigma}^{\dagger}d_{\sigma}+V_{k}^{\ast}d_{\sigma}^{\dagger}f_{k,\sigma}),}
\]

\end_inset

where 
\begin_inset Formula $d_{\sigma}^{\dagger}$
\end_inset


\begin_inset Formula $(d_{\sigma})$
\end_inset

